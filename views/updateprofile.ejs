<% include header %>
    <% include usernav %>


        <style>
                #log {
                    border-radius: 5px;
                    background-color: rgb(255, 221, 157);
                    padding: 20px;
                }
                
                input[type=text],input[type=password],input[type=number], select,textarea{
                width: 100%;
                padding: 12px;
                border: 1px solid #ccc;
                border-radius: 4px;
                resize: vertical;
                }
                 
                
                input[type=submit] {
                background-color: #FF7A59;
                color: white;
                padding: 12px 20px;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                float:left;
                }
                
                
                input[type=submit]:hover {
                background-color:rgb(73, 116, 211);
                }
                
                </style>


            <div id="page">
                <div id="content">
                    <div class="box">
                        <h2>Update Profile here..</h2>
                       
                        <div id='log'>
                                <p><%= title%></p>
                        <form action="/users/updateprofile" method="POST">
                            <table>
                                <tr>
                                    <td> Username</td>
                                    <td>
                                        <input type="text" name='nm' value='<%= result[0].nm%>'>
                                    </td>
                                </tr>
                                <tr>
                                    <td> Email</td>
                                    <td>
                                        <input type="text" name="email" readonly  value='<%= result[0].email%>' required>
                                    </td>
                                </tr>
                               
                                <tr>
                                    <td> Address</td>
                                    <td>
                                        <textarea type="text" name='ad' ><%= result[0].ad%></textarea></td>
                </tr>
                <tr>
                    <td> Phoneno</td>
                    <td> <input type="number"  name='num'  value='<%= result[0].num%>'  pattern="[0-9]{10}"></td>
                </tr>
                <tr>
                    <td> city</td>
                    <td> 
                        <select name ="city" id="" >
                           <option> select city</option>
                           <option> Jabalpur</option>
                           <option> Indore</option>
                           <option> bhopal</option>
                        
                        </select>
                    </td>
                    <tr>
                            <td> Gender</td>
                            <td>
                               <input type="radio" name='gender'value='female'>Female
                             <input type="radio" name='gender'value='Male'> Male 
                            </td>
                        </tr>

                    <tr>
                        <td>
                            <input type="submit" nmae='sub' value="submit">
                        </td>
                    </tr>
                
            


               </table>
           </form>
        </div>
    </div>
    
    <br class="clearfix" />
    
    
</div>


