<% include header %>
<% include adminnav %>
<style>
    table {
        border:1;
        width: 100%;
    }
    
    th, td {
        text-align: center;
        padding: 4px;
    }
    
    tr:nth-child(even){background-color:whitesmoke ;}
    
    th {
        background-color: #B9C9FE;
        color: white;
        
    }

    #stl{
        background-color:rgb(228, 207, 228);
        width: 90%;
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }
    </style>

<div style="width:100%" id="page">
    <div style="width:100%" id="content">
        <div class="box">
            <h2>Users Info....</h2>
        <div id="stl">
             <table style="text-align: center"  cellspacing="2">
                 <tr>
                     <th>REgid</th>
                     <th>Email</th>
                     <th>Password</th>
                     <th>Address</th>
                     <th>Phoneno.</th>
                     <th>City</th>
                     <th>Gender</th>
                     <th>Action</th>
                 </tr>

              <% for(i=0;i < result.length;i++)
                { %>
               <tr>
                   <td><%= result[i].regid %></td>
                   <td><%= result[i].email %></td>
                   <td><%= result[i].pass %></td>
                   <td><%= result[i].ad %></td>
                   <td><%= result[i].num %></td>
                   <td><%= result[i].city %></td>
                   <td><%= result[i].gender %></td>
                   <td>
                  <% if(result[i].status==1)
                   {%>
                      <a  href="/admin/blockunblock?email=<%= result[i].email%>&status=0"><img src="../images/block.png" height="20" width="20"></a>

                  <% }%>
                  <% if(result[i].status==0) {%>
                    <a  href="/admin/blockunblock?email=<%= result[i].email%>&status=1"><img src="../images/unblock.jpg" height="20" width="20">
                   
                  <% }%>

                 <a href="/admin/deleteuser?email=<%= result[i].email%>"><img src="../images/delete.jpg" height="20" width="20"></a>
               </td>

               </tr>

                  <%  }  %>
         
             </table>
            </div>
            </div>
        <br class="clearfix" />
 </div>
 <div id="sidebar">
     <br class="clearfix" />
 </div>
</div>

